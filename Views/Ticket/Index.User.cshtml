    <script>
        $(document).ready(function() {
            var developersTable = $("#ticketsTable").DataTable({
                ajax: {
                    url: "/api/tickets/GetMyTickets",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "Id",
                        render: function(data, type, ticket) {

                            return '<a href=/ticket/details/' + data + '>'+ ticket.Title +'</a>';
                        }

                    },
                    {
                        data: "TicketType.Type"

